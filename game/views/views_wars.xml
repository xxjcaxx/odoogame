<odoo>
  <data>

    <record model="ir.ui.view" id="game.market_list">
      <field name="name">market list</field>
      <field name="model">game.market</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="stuff"/>
          <field name="price"/>
          <field name="player"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="game.market_form">
      <field name="name">market form</field>
      <field name="model">game.market</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="stuff"></field>
              <field name="stuffk"></field>
              <field name="price"/>
              <field name="player"/>
            </group></sheet></form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="game.market_action_window">
      <field name="name">market window</field>
      <field name="res_model">game.market</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Market" id="game.menu_market" parent="game.menu_1"
              action="game.market_action_window"/>


    <record model="ir.ui.view" id="game.battle_list">
      <field name="name">battle list</field>
      <field name="model">game.battle</field>
      <field name="arch" type="xml">
        <tree decoration-muted="state=='4'">
          <field name="name"/>
          <!-- <field name="attack" widget="many2many_tags"/> <field name="defend" widget="many2many_tags"/> -->
          <field name="characters_attack" widget="many2many_tags"/>
          <field name="characters_defend" widget="many2many_tags"/>
          <field name="date"/>
            <field name="time_remaining"/>
          <field name="state"/>

        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="game.battle_form">
      <field name="name">battle form</field>
      <field name="model">game.battle</field>
      <field name="arch" type="xml">
        <form>
          <header><field name="state" widget="statusbar"/></header>
          <sheet>
            <group>
              <field name="name"/>
              <field name="date"/>
              <field name="finished"/>
            </group>
            <notebook><page string="Attack">
              <group>
                <field name="attack"/>
                <field name="characters_attack" attrs="{'invisible': [('attack', '=', [])],
                           'readonly': [('attack','=',[])]}" >

                  <tree>
                                      <field name="name"/><field name="player"/>
                    <field name="war"/><field name="age"/>
                    <field name="health"/><field name="gun_power"/><field name="melee_power"/><field name="armor_power"/>
                  </tree>
                </field>
                <field name="characters_attack_available" attrs="{'invisible': [('attack', '=', [])],
                           'readonly': [('attack','=',[])]}" >
                  <tree>
                    <field name="name"/><field name="player"/>
                    <field name="war"/><field name="age"/>
                    <field name="health"/><field name="gun_power"/><field name="melee_power"/><field name="armor_power"/>
                  </tree>

                </field>
              </group>
            </page>
              <page string="Defend">
                <group>
                  <field name="defend"/>
                  <field name="characters_defend" attrs="{'invisible': [('defend', '=', [])],
                           'readonly': [('defend','=',[])]}" >
                    <tree>
                    <field name="name"/><field name="player"/>
                    <field name="war"/><field name="age"/>
                    <field name="health"/><field name="gun_power"/><field name="melee_power"/><field name="armor_power"/>
                    </tree>
                  </field>
                  <field name="characters_defend_available" attrs="{'invisible': [('defend', '=', [])],
                           'readonly': [('defend','=',[])]}" >
                    <tree>
                                        <field name="name"/><field name="player"/>
                    <field name="war"/><field name="age"/>
                    <field name="health"/><field name="gun_power"/><field name="melee_power"/><field name="armor_power"/>
                    </tree>
                  </field>
                </group>
              </page>

            </notebook>
            <button name="compute_battle" type="object" string="Compute Battle" class="oe_highlight" />
          </sheet></form>
      </field>
    </record>

    <record model="ir.ui.view" id="game.battle_calendar">
      <field name="name">battle calendar</field>
      <field name="model">game.battle</field>
      <field name="arch" type="xml">
        <calendar date_start="date" color="name">
          <field name="name"/>
          <field name="attack" widget="many2many_tags"/>
          <field name="defend" widget="many2many_tags"/>
        </calendar>
      </field>
    </record>

    <record model="ir.actions.act_window" id="game.battle_action_window">
      <field name="name">battle window</field>
      <field name="res_model">game.battle</field>
      <field name="view_mode">tree,form,calendar</field>
        <field name="context">{'search_default_not_finished':1}</field>
    </record>

    <menuitem name="Battle" id="game.menu_battle" parent="game.menu_1"
              action="game.battle_action_window"/>


    <record model="ir.ui.view" id="game.clan_list">
      <field name="name">clan list</field>
      <field name="model">game.clan</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="players" widget="many2many_tags"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="game.clan_form">
      <field name="name">clan form</field>
      <field name="model">game.clan</field>
      <field name="arch" type="xml">
        <form>

          <sheet>
            <group>
              <field name="name"/>

              <field name="image" widget="image" class="oe_edit_only"/>
              <field name="image_small" widget="image" class="oe_read_only"/>
            </group>
            <notebook><page string="Players">
              <group>
                <field name="players" mode="kanban"/>
                <field name="raws">
                  <tree>
                    <field name="name"/>
              <field name="raw"/>
              <field name="quantity"/>
              <button name="%(game.launch_assign_raws_wizard)d" type="action" string="Assign Raws"></button>
                  </tree>
                        </field>
              </group>
            </page>
              <page string="battles">
                <group>
                  <field name="battles"/>
                </group>
              </page>
            </notebook>
          </sheet></form>
      </field>
    </record>
    >

    <record model="ir.actions.act_window" id="game.clan_action_window">
      <field name="name">clan window</field>
      <field name="res_model">game.clan</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Clan" id="game.menu_clan" parent="game.menu_1"
              action="game.clan_action_window"/>


  </data>
</odoo>
